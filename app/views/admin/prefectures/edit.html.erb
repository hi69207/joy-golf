  <h1>都道府県</h1>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>修正フォーム</h2>

      <%= render 'layouts/errors', obj: @prefecture %>
      
      <%= form_with model: @prefecture, url: admin_prefecture_path(@prefecture), method: :PATCH, local: true do |f| %>
        
        <div class="form-group">
          <%= f.label :name, "都道府県名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :prefecture_image, "画像" %>
          <%= f.file_field :prefecture_image, accept: 'image/*', class: "form-control-file" %>
        </div>
        
        <div class="form-group">
          <%= f.label :latitude, "緯度" %>
          <%= f.text_field :latitude, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :longitude, "経度" %>
          <%= f.text_field :longitude, class: "form-control" %>
        </div>
        
        <div class="form-group d-flex">
          <%= f.submit '更新', class: 'btn btn-success mr-3' %>
          <%= link_to '戻る', admin_prefectures_path, class: "btn btn-secondary" %>
        </div>
        
      <% end %>
      
    </div>
  </div>