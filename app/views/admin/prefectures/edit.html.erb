<div class='container'>
  <h1>都道府県</h1>
  <div class='row'>

    <div class="col">
      <h2>修正フォーム</h2>

			<%= render 'layouts/errors', obj: @prefecture %>
      
  		<%= form_with model: @prefecture, url: admin_prefecture_path(@prefecture), method: :PATCH, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "都道府県名" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :prefecture_image, "画像" %>
          <%= f.file_field :prefecture_image, accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :latitude, "緯度" %>
          <%= f.text_field :latitude %>
        </div>
        <div class="form-group">
          <%= f.label :longitude, "経度" %>
          <%= f.text_field :longitude %>
        </div>
        <div class="form-group">
          <%= f.submit '更新', class: 'btn btn-success' %>
        </div>
      <% end %>
  		<%= link_to '戻る', admin_prefectures_path, class: "btn btn-success" %>
		</div>
    
  </div>
</div>