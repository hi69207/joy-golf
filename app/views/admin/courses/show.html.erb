  <h1>ゴルフコース</h1>

  <div class="row">
    <div class="col-12">
      <h2>詳細</h2>
      
      <div class="table-responsive">
        
        <table class="table table-bordered text-center">
          
          <thead class="thead-light">
            <tr>
              <th></th>
              <th>コース名</th>
              <th>住所</th>
              <th>緯度</th>
              <th>経度</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="align-middle"><%= image_tag @course.get_course_image, size:'200x200' %></td>
              <td class="align-middle"><%= @course.name %></td>
              <td class="align-middle"><%= @course.prefecture.name %> <%= @course.address %></td>
              <td class="align-middle"><%= @course.latitude %></td>
              <td class="align-middle"><%= @course.longitude %></td>
              <td class="align-middle"><%= @course.course_state %></td>
            </tr>
          </tbody>
        </table>
      </div>
      
      <%= link_to '編集', edit_admin_course_path(@course), class: "btn btn-success" %>
      
    </div>
  </div>

  <%= render 'public/courses/posts', course: @course, posts: @posts %>