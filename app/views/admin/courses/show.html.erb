<div class='container'>
  <h1>ゴルフコース</h1>
  <div class='row'>

    <div class='col'>
      <h2>詳細</h2>
  		<table class='table'>
  		  <tr>
          <td><%= image_tag @course.get_course_image, size:'200x200' %></td>
          <td><%= @course.name %></td>
          <td><%= @course.prefecture.name %></td>
          <td><%= @course.address %></td>
          <td><%= @course.latitude %></td>
          <td><%= @course.longitude %></td>
          <td><%= @course.status_text %></td>
        </tr>
      </table>
      <%= link_to '編集', edit_admin_course_path(@course), class: "btn btn-success" %>
    </div>
  </div>
</div>