  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>コメントフォーム</h2>

      <%= render 'layouts/errors', obj: post_comment %>

       <%= form_with model: [post.course, post, post_comment], method: :post, local: true do |f| %>

        <div class="form-group">
          <%= f.text_area :comment, placeholder: "コメントをここに", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.submit '送信', class: 'btn btn-success' %>
        </div>
        
      <% end %>
      
    </div>
  </div>