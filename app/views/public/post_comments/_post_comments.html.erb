      <div class="table-responsive">
        
        <table class="table table-bordered text-center">
          
          <thead class="thead-light">
            <tr>
              <th></th>
              <th>ゴルファー名</th>
              <th>ゴルフ歴（年）</th>
              <th>平均スコア（過去10ラウンド）</th>
              <th class="w-30">コメント</th>
              <th>コメント日</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% post.post_comments.each do |post_comment| %>
            <tr>
              <td class="align-middle"><%= image_tag post_comment.customer.get_profile_image, size:'100x100' %></td>

              <% if admin_signed_in? %>
                <td class="align-middle"><%= link_to post_comment.customer.name, admin_customer_path(post_comment.customer) %></td>
              <% elsif customer_signed_in? %>
                <td class="align-middle"><%= link_to post_comment.customer.name, customer_path(post_comment.customer) %></td>
              <% end %>

              <td class="align-middle"><%= post_comment.customer.history %></td>
              <td class="align-middle"><%= post_comment.customer.average_last_10_golf_score.round(1) %></td>
              <td class="align-middle"><%= post_comment.comment %></td>
              <td class="align-middle"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
              
              <% if admin_signed_in? %>
                <td class="align-middle"><%= link_to "削除", admin_course_post_post_comment_path(post_comment.post.course, post_comment.post, post_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
              <% elsif post_comment.customer == current_customer %>
                <td class="align-middle"><%= link_to "削除", course_post_post_comment_path(post_comment.post.course, post_comment.post, post_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
              <% elsif %>
                <td class="align-middle"></td>
              <% end %>

            </tr>
            <% end %>
          </tbody>

        </table>

      </div>