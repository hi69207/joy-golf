  <h1>ゴルフコース</h1>

    <div class='row'>
      <h2>投稿修正フォーム</h2>

      <%= render 'layouts/errors', obj: @post %>

      <%= form_with model: [@course, @post], method: :PATCH, local: true do |f| %>
        <div class="form-group">
          <%= f.label :round_day, "ラウンド日" %>
          <%= f.date_field :round_day %>
        </div>
        <div class="form-group">
          <%= f.label :score, "ゴルフスコア" %>
          <%= f.text_field :score %>
        </div>
        <div class="form-group">
          <%= f.label :sentence, "感想" %>
          <%= f.text_field :sentence %>
        </div>
        <div class="form-group">
          <%= f.submit '更新', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>