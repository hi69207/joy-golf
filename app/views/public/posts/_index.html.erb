<table>
  <thead>
    <tr>
      <th></th>
      <th>コース名</th>
      <th>都道府県</th>
      <th>住所</th>
      <th>氏名</th>
      <th>都道府県</th>
      <th>ゴルフ歴</th>
      <th>ラウンド日</th>
      <th>ゴルフスコア</th>
      <th>感想</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= image_tag post.course.get_course_image, size:'100x100' %></td>
        <td><%= post.course.name %></td>
        <td><%= post.course.prefecture.name %></td>
        <td><%= post.course.address %></td>
        <td><%= post.customer.name %></td>
        <td><%= post.customer.prefecture.name %></td>
        <td><%= post.customer.history %></td>
        <td><%= post.round_day %></td>
        <td><%= post.score %></td>
        <td><%= post.sentence %></td>
        <td><%= link_to 'show', course_post_path(post.course, post), class: "btn btn-success" %></td>
      </tr>
    <% end %>
    <%= paginate posts %>
  </tbody>
</table>