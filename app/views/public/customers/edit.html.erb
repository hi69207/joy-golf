<div class='container'>
  <h1>マイページ</h1>
  <div class='row'>

    <div class="col">
      <h2>修正フォーム</h2>

			<%= render 'layouts/errors', obj: @customer %>
      
  		<%= form_with model: @customer, url: customers_information_path(@customer), method: :PATCH, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "氏名" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, "画像" %>
          <%= f.file_field :profile_image, accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :prefecture_id, "都道府県" %>
          <%= f.collection_select :prefecture_id, @prefectures, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.label :history, "ゴルフ歴" %>
          <%= f.text_field :history %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email %>
        </div>
        <div class="form-group">
          <%= f.label :is_active, "会員ステータス" %>
            <div>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active_true, "有効" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active_false, "退会" %>
            </div>
        </div>
        <div class="form-group">
          <%= f.submit '更新', class: 'btn btn-success' %>
        </div>
      <% end %>
  		<%= link_to '戻る', customers_my_page_path(@customer), class: "btn btn-success" %>
		</div>
    
  </div>
</div>