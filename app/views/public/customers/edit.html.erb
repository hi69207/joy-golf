  <h1>マイページ</h1>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>修正フォーム</h2>

      <%= render 'layouts/errors', obj: @customer %>
      
      <%= form_with model: @customer, url: customer_path(@customer), method: :PATCH, local: true do |f| %>
        
        <div class="form-group">
          <%= f.label :name, "ゴルファー名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像" %>
          <%= f.file_field :profile_image, accept: 'image/*', class: "form-control-file" %>
        </div>
        
        <div class="form-group">
          <%= f.label :prefecture_id, "出身地" %>
          <%= f.collection_select :prefecture_id, @prefectures, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %>
        </div>
        
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :history, "ゴルフ歴（年）" %>
          <%= f.text_field :history, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        
        <div class="form-group d-flex">
          <%= f.submit '更新', class: 'btn btn-success mr-3' %>
          <%= link_to '戻る', customer_path(@customer), class: "btn btn-secondary" %>
        </div>
        
      <% end %>

      <div class="text-right">
        <%= link_to '退会する', customers_withdraw_path, method: :delete, class: 'btn btn-danger', data: { confirm: '本当に退会しますか？' } %>
      </div>
      
    </div>
  </div>